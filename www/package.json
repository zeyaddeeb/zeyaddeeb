{
  "name": "zeyaddeeb",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "docker compose up -d && turbo dev",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:push": "turbo run db:push --filter=@zeyaddeeb/db",
    "db:seed": "turbo run db:seed --filter=@zeyaddeeb/db",
    "lint": "biome lint",
    "format": "biome format --write",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "turbo": "^2.7.5",
    "typescript": "~5.9.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "catalog": {
    "@tanstack/react-query": "^5.90.20",
    "@types/node": "25.0.2",
    "@types/react": "^19.1.0",
    "typescript": "^5.9.3"
  }
}
